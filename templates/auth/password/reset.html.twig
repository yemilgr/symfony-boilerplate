{% extends 'layouts/base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">{{ 'Reset Password'|trans }}</div>

                    <div class="card-body">
                        {% for message in app.flashes('status') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}

                        <div class="form-group row mb-0">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'Reset Password'|trans }}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}